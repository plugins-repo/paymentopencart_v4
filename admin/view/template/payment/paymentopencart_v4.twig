{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
         <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endif %}
    <div class="card">
      <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
      <div class="card-body">

<form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">
    {# Enabled / Disabled #}
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
    <div class="col-sm-10">
        <div class="form-check form-switch form-switch-lg">
            <input type="hidden" name="payment_paymentopencart_v4_status" value="0" />
            <input type="checkbox" name="payment_paymentopencart_v4_status" value="1" id="input-status" class="form-check-input" {% if payment_paymentopencart_v4_status %} checked{% endif %} />
        </div>
    </div>
</div>


    <div class="row mb-3 required">
        <label class="col-sm-2 col-form-label" for="payment_paymentopencart_v4_merchant_id"><span data-toggle="tooltip" title="{{ entry_merchant_id }}">{{ entry_merchant_id }}</span></label>
        <div class="col-sm-10">
            <input id="paymentopencart_v4-merchant-id" class="form-control" type="text" name="payment_paymentopencart_v4_merchant_id" value="{{ merchant_id }}" placeholder="{{ entry_merchant_id }}" size="60" required="required">
        </div>
    </div>

    <div class="row mb-3 required">
        <label class="col-sm-2 col-form-label" for="payment_paymentopencart_v4_partner_name"><span data-toggle="tooltip" title="{{ entry_partner_name }}">{{ entry_partner_name }}</span></label>
        <div class="col-sm-10">
            <input id="paymentopencart_v4-partner-name" class="form-control" type="text" name="payment_paymentopencart_v4_partner_name" value="{{ partner_name }}" placeholder="{{ entry_partner_name }}" size="60" required="required">
        </div>
    </div>

    <div class="row mb-3 required">
        <label class="col-sm-2 col-form-label" for="payment_paymentopencart_v4_merchant_redirecturl"><span data-toggle="tooltip" title="{{ entry_merchantRedirectUrl }}">{{ entry_merchantRedirectUrl }}</span></label>
        <div class="col-sm-10">
            <input id="paymentopencart_v4-merchant-redirecturl" class="form-control" type="text" name="payment_paymentopencart_v4_merchant_redirecturl" value="{{ merchant_redirecturl }}" placeholder="{{ entry_merchantRedirectUrl }}" size="60" required="required">
        </div>
    </div>

    <div class="row mb-3 required">
        <label class="col-sm-2 col-form-label" for="payment_paymentopencart_v4_secret_key"><span data-toggle="tooltip" title="{{ entry_secretkey }}">{{ entry_secretkey }}</span></label>
        <div class="col-sm-10">
            <input id="paymentopencart_v4-secret-key" class="form-control" type="text" name="payment_paymentopencart_v4_secret_key" value="{{ secret_key }}" placeholder="{{ entry_secretkey }}" size="60" required="required">
        </div>
    </div>

    <div class="row mb-3 required">
        <label class="col-sm-2 col-form-label" for="payment_paymentopencart_v4_test_url"><span data-toggle="tooltip" title="{{ entry_test_url }}">{{ entry_test_url }}</span></label>
        <div class="col-sm-10">
            <input id="paymentopencart_v4-test-url" class="form-control" type="text" name="payment_paymentopencart_v4_test_url" value="{{ test_url }}" placeholder="{{ entry_test_url }}" size="60" required="required">
        </div>
    </div>

  
</form>

       
      </div>
    </div>
  </div>
</div>
{{ footer }}
